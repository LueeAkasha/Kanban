<Window x:Class="Presentation.View.SetLimitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.View"
        mc:Ignorable="d"
        Title="SetLimitWindow" Height="450" Width="800">
    <Grid>
        <Button Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="219,156,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click_1"/>
        <Button Name="Submit" Content="Submit!" HorizontalAlignment="Left" Margin="123,156,0,0" VerticalAlignment="Top" Width="75" Click="Submit_Click"   />
        <Label Content="Limit: " HorizontalAlignment="Left" Margin="94,94,0,0" VerticalAlignment="Top" Width="43"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="152,95,0,0" TextWrapping="Wrap" Text="{Binding Path=ColumnLimit}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
