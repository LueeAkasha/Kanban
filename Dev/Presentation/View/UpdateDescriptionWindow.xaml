<Window x:Class="Presentation.View.UpdateDescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.View"
        mc:Ignorable="d"
        Title="UpdateDescriptionWindow" Height="300" Width="590" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="New description:" HorizontalAlignment="Left" Margin="40,50,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Name="DescriptionBox" AcceptsTab="True" AcceptsReturn="True" MaxLength="300" Text="{Binding Path=Description}" HorizontalAlignment="Left" Height="120" Margin="160,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" TextChanged="TextBox_TextChanged"/>
        <Button Name="Submit" Content="Submit!" HorizontalAlignment="Left" Margin="180,210,0,0" VerticalAlignment="Top" Height="30" Width="80" Click="Submit_Click"/>
        <Button Name="Canel" Content="Cancel" HorizontalAlignment="Left" Margin="300,209,0,0" VerticalAlignment="Top" Height="30" Width="80" Click="Canel_Click"/>
        <TextBlock  Name="descOutput" HorizontalAlignment="Left" Margin="511,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
