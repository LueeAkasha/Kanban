<Window x:Class="Presentation.View.ChangeColumnNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.View"
        mc:Ignorable="d"
        Title="ChangeColumnNameWindow" Height="245.335" Width="376.239">
    <Grid>
        <Label Content="New column name:" HorizontalAlignment="Left" Margin="60,70,0,0" VerticalAlignment="Top" Width="114"/>
        <TextBox Name="NewColumnName"  Text="{Binding Path=ColumnName, Mode=OneWayToSource}" MaxLength="15" HorizontalAlignment="Left" Height="23" Margin="190,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="NewColumnName_TextChanged" />
        <Button Name="Submit" Content="Submit!" HorizontalAlignment="Left" Margin="90,130,0,0" VerticalAlignment="Top" Width="75" Click="Submit_Click"/>
        <Button Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="200,130,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>
        <TextBlock Name="ColumnNameoutput" HorizontalAlignment="Left" Margin="261,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
